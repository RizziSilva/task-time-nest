{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@modules": ["./src/modules"],
      "@entities": ["./src/entities"],
      "@dtos": ["./src/dto"],
      "@controllers": ["./src/controllers"],
      "@services": ["./src/services"],
      "@mappers": ["./src/mappers"]
    }
  }
}
